{
  "name": "ts-slurper-poc",
  "version": "0.0.0",
  "description": "A PoC to understand how types can be shared across projects using an npm package and some automations",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf src dist",
    "generate-package": "npm run clean && NODE_NO_WARNINGS=1 node --loader esbuild-register/loader -r esbuild-register ./scripts/generatePackage.ts",
    "postinstall": "patch-package"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@grafana/data": "10.2.0",
    "@grafana/runtime": "10.2.0",
    "@grafana/schema": "10.2.0",
    "@grafana/tsconfig": "^1.3.0-rc1",
    "@grafana/ui": "10.2.0",
    "@types/lodash": "4.17.4",
    "@types/node": "^20.14.10",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.23.0",
    "esbuild-register": "^3.5.0",
    "patch-package": "^8.0.0",
    "rimraf": "^6.0.1",
    "tar": "^7.4.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "dts-bundle-generator@9.5.1": "patches/dts-bundle-generator@9.5.1.patch"
    }
  }
}
